{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Mot de passe oublié{% endblock %}

{% block content %}
    <div class="block-small">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
            <div class="form-group col-6 pl-0">
                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Demander une réinitialisation</button>
        </form>
        <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login') }}">vous connecter</a></p>
    </div>

{% endblock %}
